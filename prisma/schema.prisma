generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  student
  worker
}

model User {
  id    String @id @default(uuid())
  firstName String
  lastName String
  email String  @unique
  code      String @unique  
  password  String   
  role UserRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
